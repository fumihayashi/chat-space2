.chat-main__messages{data: {message: {id: message.id}}}
  .chat-main__messages--info
    .chat-main__messages--info-group-name
      = message.user.name
    .chat-main__messages--info-date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.content.present?
    %p.chat-main__messages--date-message
      = message.content
  = image_tag message.image.url if message.image.present?


